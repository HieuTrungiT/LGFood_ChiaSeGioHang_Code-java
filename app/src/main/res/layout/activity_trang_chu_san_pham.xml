<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/white"    android:orientation="vertical"    tools:context=".trangChu_SanPham_Activity">    <androidx.constraintlayout.widget.ConstraintLayout        android:layout_width="match_parent"        android:layout_height="60dp"        android:layout_gravity="center"        android:paddingLeft="15dp"        android:paddingRight="15dp">        <ImageView            android:id="@+id/trangChuSanPham_img_btn_menudrawel"            android:layout_width="25dp"            android:layout_height="25dp"            android:src="@drawable/ic_menu_bar"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toTopOf="parent" />        <FrameLayout            android:layout_width="35dp"            android:layout_height="35dp"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintTop_toTopOf="parent">            <ImageView                android:id="@+id/trangChuSanPham_img_btn_thogngBao"                android:layout_width="match_parent"                android:layout_height="match_parent"                android:layout_margin="5dp"                android:src="@drawable/ic_thongbao"                app:layout_constraintBottom_toBottomOf="parent"                app:layout_constraintEnd_toStartOf="@+id/imageView4"                app:layout_constraintTop_toTopOf="parent" />            <de.hdodenhof.circleimageview.CircleImageView                android:layout_width="12dp"                android:layout_height="12dp"                android:layout_gravity="right"                android:layout_marginTop="2dp"                android:layout_marginRight="4dp"                android:src="@color/lf_red" />            <TextView                android:id="@+id/trangChuSanPham_tv_soLuongThongBao"                android:layout_width="12dp"                android:layout_height="12dp"                android:layout_gravity="right"                android:layout_marginTop="2dp"                android:layout_marginRight="4dp"                android:gravity="center"                android:src="@color/lf_red"                android:text="0"                android:textColor="@color/white"                android:textSize="8dp"                android:textStyle="bold" />        </FrameLayout>    </androidx.constraintlayout.widget.ConstraintLayout>    <View        android:layout_width="match_parent"        android:layout_height="2dp"        android:alpha="0.5"        android:background="@color/lf_orange" />    <FrameLayout        android:layout_width="match_parent"        android:layout_height="match_parent">        <ScrollView            android:layout_width="match_parent"            android:layout_height="wrap_content">            <LinearLayout                android:layout_width="match_parent"                android:layout_height="match_parent"                android:orientation="vertical">                <androidx.constraintlayout.widget.ConstraintLayout                    android:layout_width="match_parent"                    android:layout_height="match_parent">                    <androidx.constraintlayout.widget.ConstraintLayout                        android:id="@+id/linearLayout11"                        android:layout_width="match_parent"                        android:layout_height="32dp"                        android:layout_marginTop="10dp"                        android:paddingLeft="10dp"                        android:paddingRight="10dp"                        app:layout_constraintEnd_toEndOf="parent"                        app:layout_constraintStart_toStartOf="parent"                        app:layout_constraintTop_toTopOf="parent">                        <LinearLayout                            android:id="@+id/sanPham_edt_search"                            android:layout_width="match_parent"                            android:layout_height="31dp"                            android:layout_marginRight="45dp"                            android:background="@drawable/broder_stroke_cam"                            android:hint="Search"                            android:orientation="horizontal"                            android:textSize="15dp"                            app:layout_constraintBottom_toBottomOf="parent"                            app:layout_constraintEnd_toEndOf="@+id/trangChuSanPham_btn_tuyChinhLoaiTimKiem"                            app:layout_constraintStart_toStartOf="parent"                            app:layout_constraintTop_toTopOf="parent">                            <ImageView                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:layout_gravity="center"                                android:padding="7dp"                                android:src="@drawable/ic_timkiem" />                            <EditText                                android:id="@+id/trangChuSanPham_edt_tuyChinhLoaiTimKiem"                                android:layout_width="match_parent"                                android:layout_height="match_parent"                                android:background="@null"                                android:paddingRight="10dp" />                        </LinearLayout>                        <ImageView                            android:id="@+id/trangChuSanPham_btn_tuyChinhLoaiTimKiem"                            android:layout_width="32dp"                            android:layout_height="32dp"                            android:background="@drawable/broder_radius_xanhduong_nhe"                            android:padding="7dp"                            android:src="@drawable/ic_tuychinh"                            app:layout_constraintBottom_toBottomOf="parent"                            app:layout_constraintEnd_toEndOf="parent"                            app:layout_constraintTop_toTopOf="parent" />                    </androidx.constraintlayout.widget.ConstraintLayout>                    <LinearLayout                        android:id="@+id/trangChuSanPham_llout_slider"                        android:layout_width="match_parent"                        android:layout_height="215dp"                        android:layout_marginTop="20sp"                        app:layout_constraintEnd_toEndOf="parent"                        app:layout_constraintStart_toStartOf="parent"                        app:layout_constraintTop_toBottomOf="@+id/linearLayout11">                        <ImageView                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:scaleType="fitXY"                            android:src="@drawable/img_panner" />                    </LinearLayout>                    <HorizontalScrollView                        android:id="@+id/horizontalScrollView"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_marginTop="20dp"                        android:scrollbars="none"                        app:layout_constraintEnd_toEndOf="parent"                        app:layout_constraintStart_toStartOf="parent"                        app:layout_constraintTop_toBottomOf="@+id/trangChuSanPham_llout_slider">                        <LinearLayout                            android:layout_width="wrap_content"                            android:layout_height="wrap_content">                            <TextView                                android:id="@+id/trangChuSanPham_tv_btn_CLSP_all"                                android:layout_width="50dp"                                android:layout_height="50dp"                                android:layout_marginRight="12dp"                                android:background="@drawable/broder_radius_cam2_thuonghieu"                                android:gravity="center"                                android:text="All"                                android:textColor="@color/white"                                android:textSize="20sp"                                android:textStyle="bold" />                            <ImageView                                android:id="@+id/trangChuSanPham_img_btn_CLSP_coffee"                                android:layout_width="50dp"                                android:layout_height="50dp"                                android:layout_marginLeft="10dp"                                android:layout_marginRight="10dp"                                android:background="@drawable/broder_radius_xanhduong_nhe"                                android:paddingLeft="12dp"                                android:paddingRight="12dp"                                android:src="@drawable/ic_coffee" />                            <ImageView                                android:id="@+id/trangChuSanPham_img_btn_CLSP_herb"                                android:layout_width="50dp"                                android:layout_height="50dp"                                android:layout_marginLeft="10dp"                                android:layout_marginRight="10dp"                                android:background="@drawable/broder_radius_xanhduong_nhe"                                android:paddingLeft="12dp"                                android:paddingRight="12dp"                                android:src="@drawable/ic_herb" />                            <ImageView                                android:id="@+id/trangChuSanPham_img_btn_CLSP_seed"                                android:layout_width="50dp"                                android:layout_height="50dp"                                android:layout_marginLeft="10dp"                                android:layout_marginRight="10dp"                                android:background="@drawable/broder_radius_xanhduong_nhe"                                android:paddingLeft="12dp"                                android:paddingRight="12dp"                                android:src="@drawable/ic_seed" />                            <ImageView                                android:id="@+id/trangChuSanPham_img_btn_CLSP_jam"                                android:layout_width="50dp"                                android:layout_height="50dp"                                android:layout_marginLeft="10dp"                                android:layout_marginRight="10dp"                                android:background="@drawable/broder_radius_xanhduong_nhe"                                android:paddingLeft="12dp"                                android:paddingRight="12dp"                                android:src="@drawable/ic_jam" />                            <ImageView                                android:id="@+id/trangChuSanPham_img_btn_CLSP_tea"                                android:layout_width="50dp"                                android:layout_height="50dp"                                android:layout_marginLeft="10dp"                                android:layout_marginRight="10dp"                                android:background="@drawable/broder_radius_xanhduong_nhe"                                android:paddingLeft="12dp"                                android:paddingRight="12dp"                                android:src="@drawable/ic_tea" />                        </LinearLayout>                    </HorizontalScrollView>                    <FrameLayout                        android:id="@+id/textView2"                        android:layout_width="148dp"                        android:layout_height="35dp"                        android:layout_marginTop="15dp"                        android:orientation="vertical"                        app:layout_constraintEnd_toEndOf="parent"                        app:layout_constraintHorizontal_bias="0.0"                        app:layout_constraintStart_toStartOf="parent"                        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView">                        <ImageView                            android:layout_width="match_parent"                            android:layout_height="match_parent"                            android:background="@drawable/img_showitem" />                        <TextView                            android:layout_width="match_parent"                            android:layout_height="match_parent"                            android:gravity="center|start"                            android:paddingLeft="10dp"                            android:text="Top sản phẩm"                            android:textColor="@color/white"                            android:textStyle="bold" />                    </FrameLayout>                    <androidx.recyclerview.widget.RecyclerView                        android:id="@+id/trangChuSanPham_rscv_showSanPhamNgang"                        android:layout_width="match_parent"                        android:layout_height="225dp"                        android:layout_marginTop="16dp"                        app:layout_constraintEnd_toEndOf="parent"                        app:layout_constraintHorizontal_bias="0.0"                        app:layout_constraintStart_toStartOf="parent"                        app:layout_constraintTop_toBottomOf="@+id/textView2" />                    <FrameLayout                        android:id="@+id/trangChuSanPham_fm"                        android:layout_width="148dp"                        android:layout_height="35dp"                        android:layout_marginTop="15sp"                        android:orientation="vertical"                        app:layout_constraintEnd_toEndOf="parent"                        app:layout_constraintHorizontal_bias="0.0"                        app:layout_constraintStart_toStartOf="parent"                        app:layout_constraintTop_toBottomOf="@+id/trangChuSanPham_rscv_showSanPhamNgang">                        <ImageView                            android:layout_width="match_parent"                            android:layout_height="match_parent"                            android:background="@drawable/img_showitem" />                        <TextView                            android:id="@+id/trangChuSanPham_tv_showTenLoaiSanPham"                            android:layout_width="match_parent"                            android:layout_height="match_parent"                            android:gravity="center|start"                            android:paddingLeft="10dp"                            android:text="Sản phẩm: All"                            android:textColor="@color/white"                            android:textStyle="bold" />                    </FrameLayout>                    <androidx.constraintlayout.widget.ConstraintLayout                        android:id="@+id/linearLayout"                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        app:layout_constraintEnd_toEndOf="parent"                        app:layout_constraintStart_toStartOf="parent"                        app:layout_constraintTop_toBottomOf="@+id/trangChuSanPham_fm">                        <androidx.recyclerview.widget.RecyclerView                            android:id="@+id/trangChuSanPham_rscv_showSanPhamDoc"                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_marginLeft="10dp"                            android:layout_marginTop="10dp"                            android:layout_marginRight="10dp"                            app:layout_constraintBottom_toBottomOf="parent"                            app:layout_constraintEnd_toEndOf="parent"                            app:layout_constraintHorizontal_bias="0.0"                            app:layout_constraintStart_toStartOf="parent"                            app:layout_constraintTop_toTopOf="parent"                            app:layout_constraintVertical_bias="0.0" />                    </androidx.constraintlayout.widget.ConstraintLayout>                </androidx.constraintlayout.widget.ConstraintLayout>            </LinearLayout>        </ScrollView>      <FrameLayout          android:layout_width="match_parent"          android:layout_height="wrap_content"          android:layout_gravity="bottom"          tools:ignore="MissingClass">        <com.google.android.material.bottomnavigation.BottomNavigationView            android:layout_width="match_parent"            android:layout_height="wrap_content"            app:itemIconTint="@color/nav_color"            android:background="@drawable/rounded"            app:menu="@menu/bottom_navigation">        </com.google.android.material.bottomnavigation.BottomNavigationView>      </FrameLayout>    </FrameLayout></LinearLayout>